    <button class="cta-button">Comprar Agora</button>
</section>

<h2 class="section-title">Mais Populares</h2>
<section class="products">
    <div class="product-grid">
        @foreach (var produto in produtosPopulares)
        {
            <div class="product-card">
                @if (produto.IsNovo)
                {
                    <div class="new-badge">NOVO</div>
                }
                <img src="@produto.ImagemUrl" alt="@produto.Nome" class="product-image">
                <div class="product-info">
                    <div class="product-name">@produto.Nome</div>
                    <div class="product-group">@produto.Grupo</div>
                    <div class="product-price">R$ @produto.Preco.ToString("F2")</div>
                    <button class="add-to-cart" @onclick="() => AdicionarAoCarrinho(produto)">Adicionar ao Carrinho</button>
                </div>
            </div>
        }
    </div>
</section>

<h2 class="section-title">Recém Chegados</h2>
<section class="products">
    <div class="product-grid">
